<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/iv_top_mine"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/icon"/>

    <!--<TextView
        android:id="@+id/toolbar_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_top_main"
        android:gravity="center_vertical"
        android:text="标题"
        android:textSize="16sp"/>-->
    <ImageView
        android:id="@+id/iv_top_chat"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon"/>

    <ImageView
        android:id="@+id/iv_top_scan"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_top_chat"
        android:src="@drawable/icon"/>


    <EditText
        android:id="@+id/et_top_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_top_scan"
        android:layout_toRightOf="@+id/iv_top_mine"
        android:background="@drawable/bg_top_search"
        android:gravity="center_vertical"
        android:hint="请输入要搜索的内容"
        android:maxLength="11"
        android:paddingLeft="35dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColorHint="#ccc"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/iv_top_search"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/et_top_search"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon"/>
</RelativeLayout>